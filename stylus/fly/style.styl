$bg_color = #ffd200
*
    margin 0
    overflow 0
html,body
    width 100%
    height 100%

.plane-page
    width 100%
    height 100%
    background-color $bg_color
    position relative
    .plane-wrapper
        position absolute
        left 20%
        top 40%
        animation undulate 8s linear infinite alternate
        perspective 2500px
        transition 1s

        .plane
            width 100%
        .rotate-container
            position absolute
            top 51.7003%
            left 13.1%
            display: inline-block
            width 27.424%
            height 14.447%
            transform-origin center center
            animation rotating 0.2s linear infinite reverse
            .propeller
                width 100%
                transform rotateY(-28deg)

@keyframes rotating
    0%
        transform rotateZ(0deg)
    100%
        transform rotateZ(720deg)

@keyframes undulate
    0%
        transform translate3d(0,0,0)
    25%
        transform translate3d(-6px,-18px,100px)
    75%
        transform translate3d(6px,18px,0)