.ui.navbar
  background-color #fff
  .content
    display flex
    align-items center
    overflow hidden
    position relative
    .header img
      width 98px
      margin-left 72px
    .menu
      margin-left 103px
      .item
        display inline-block
        font-size 18px
        font-family PingFangSC-Light
        font-weight 300
        color rgba(0,0,0,1)
        line-height 25px
        padding-top 26px
        padding-bottom 35px
        &:not(:first-child)
          margin-left 64px
    .search-icon
      flex 1
      text-align right
    .menu-icon
      display none

@media only screen and (max-width:767px)
  .ui.navbar
    .content
      justify-content space-between
      padding-top 9px
      .menu
        display none
      .menu-icon
        display block
      .header img
        width 56px
        margin-left 0
      .search-icon
        flex 0

      