$font_color_white = #ffffff;

html, body {
    width: 100%;
}

.nav {
    height: 1.067rem;
    font-size: 18px;
    text-align: center;
    background-color: #1e2025;
    padding: 6px;
    box-sizing: border-box;

    .arrow-left {
        float: left;
        height: 100%;
        position: relative;

        &:after {
            content: '';
            position: absolute;
            width: 12px;
            height: 12px;
            border: 2px solid #fff;
            top: 50%;
            left: 16px;
            border-width: 0 0 2px 2px;
            transform: rotate(45deg) translateY(-55%);
        }
    }
}

span {
    color: $font_color_white;
    display: inline-block;
}

.page {
    background-color: #f4f4f4;
    position: relative;
    z-index: 1;
    margin: 0;
    color: #555555;
    min-width: 3.1rem;
    -webkit-user-select: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    font: 14px / 1.5;
    font-family: Arial, Helvetica, sans-serif;

    section {
        background-color: #ffffff;
        border-bottom: solid 1px #e5e5e5;
    }

    .movie-header {
        padding: 0;
        background-color: #f8f8f8;
        border-bottom: none;

        .movie {
            color: $font_color_white;
            padding: 0.4rem;
            line-height: 1;
            overflow: hidden;
            position: relative;
            box-sizing: border-box;
            filter: blur(0);

            .movie-bg, .movie-filter {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }

            .movie-bg {
                z-index: 0;
                filter: blur(0.6rem);
                background-image: url('./images/images/header-bg.jpg');
                background-size: cover;
                background-repeat: no-repeat;
                background-position-y: 40%;
            }

            .movie-filter {
                background-color: #40454d;
                opacity: 0.55;
            }

            .movie-content {
                position: relative;
                z-index: 1;
                padding-left: 16px;
                overflow: hidden;

                .movie-name {
                    font-size: 17px;
                    margin: 0.08rem 0;
                }

                .movie-ename {
                    font-size: 12px
                    margin-bottom: 0.3rem;
                }

                .movie-score{
                    font-size: 12px;
                    margin-bottom: 0.3rem;
                    .rating{
                        .star-img{
                            width: 0.48rem;
                            height: 0.48rem;
                            margin-right: 2px;
                            }
                        }
                    }        
                }
            }

            .movie-cover {
                float: left;
                width: 2.854rem;
                height: 4rem;
                position: relative;
                border: 1px solid #f0f2f3;

                .link {
                    cursor: pointer;
                    display: block;
                    width: 100%;
                    height: 100%;

                    img {
                        width: 100%;
                    }
                }

                &:after {
                    content: '';
                    width: 0.667rem;
                    height: 0.667rem;
                    border-radius: 50%;
                    background-image: url('./images/images/bofang.png');
                    background-size: 100% auto;
                    position: absolute;
                    right: 0.1rem;
                    bottom: 0.1rem;
                    opacity: 0.7;
                }
            }
        }
    }
}